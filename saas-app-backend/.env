# Application Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/saas-database
DATABASE_NAME=saas-database

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=saas-platform
KEYCLOAK_CLIENT_ID=saas-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Settings
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000
API_PREFIX=api/v1

# Swagger Configuration
SWAGGER_TITLE=SaaS Platform API
SWAGGER_DESCRIPTION=API documentation for the SaaS Platform
SWAGGER_VERSION=1.0.0
